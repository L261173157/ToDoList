<Window
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="ToDoList.Views.RemindView"             
             prism:ViewModelLocator.AutoWireViewModel="True" Width="400" Height="200">
    <Grid>
        <TextBox x:Name="tbContent" HorizontalAlignment="Left" Margin="10,7,0,0" Text="{Binding Content, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" Height="168" FontSize="16" VerticalContentAlignment="Top"/>

        <Button Width="80" VerticalAlignment="Top" Margin="272,7,0,0" Height="40" HorizontalAlignment="Left" Content="保存" Command="{Binding SaveCmd}" Click="Button_Click"/>
        <Label Width="80" VerticalAlignment="Top" Margin="272,62,0,0" HorizontalAlignment="Left" Content="再次提醒"/>
        <CheckBox x:Name="cbRemind" VerticalAlignment="Top" Margin="366,68,0,0" IsChecked="{Binding Remind}" HorizontalAlignment="Left" Content=""/>
        <hc:DateTimePicker x:Name="dtpRemindTime" Margin="272,104,0,10" SelectedDateTime="{Binding RemindTime}"/>
        <TextBlock x:Name="tbThingId" HorizontalAlignment="Left" Margin="362,10,0,0" Text="{Binding ThingId, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top"/>




    </Grid>
</Window>
